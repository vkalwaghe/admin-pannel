<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adminpanel">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Admin_panel"
        tools:targetApi="31">

        <!-- Dashboard Activity as the launcher -->
        <activity android:name="com.example.adminpanel.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Manage Cars Activity -->
        <activity android:name="com.example.adminpanel.ManageCarsActivity" android:exported="true" />

        <!-- Manage Drivers Activity -->
        <activity android:name="com.example.adminpanel.ManageDriversActivity" android:exported="true" />

        <!-- View Bookings Activity -->
        <activity android:name="com.example.adminpanel.ViewBookingsActivity" android:exported="true" />

    </application>
</manifest>
